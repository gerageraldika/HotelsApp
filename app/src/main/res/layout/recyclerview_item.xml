<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        card_view:cardCornerRadius="@dimen/margin_1dp"
        card_view:cardElevation="@dimen/margin_1dp"
        card_view:contentPadding="@dimen/margin_2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_item_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/text_subheading"/>

            <TextView
                android:id="@+id/adress_item_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/text_body" />

            <TextView
                android:id="@+id/stars_item_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:textColor="@color/colorDeepOrange"
                android:textSize="@dimen/text_body" />

            <TextView
                android:id="@+id/distance_item_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/text_body" />

            <TextView
                android:id="@+id/suites_item_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/text_body" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>