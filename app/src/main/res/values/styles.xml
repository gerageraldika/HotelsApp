<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/RobotoAutoCompleteTextViewStyle</item>
        <item name="android:editTextStyle">@style/RobotoEditTextStyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:actionBarStyle">@style/MyApp.ActionBar</item>
    </style>

    <!-- theme for main activity -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- actionbar theme -->

    <style name="MyApp.ActionBar" parent="android:Widget.Holo.ActionBar.Solid">
        <!--  background color -->
        <item name="android:background">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:backgroundSplit">@color/colorAccent</item>
        <item name="android:backgroundStacked">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:buttonBarButtonStyle">@style/Widget.G4S.Button.Borderless</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--theme of AlertDialog-->
    <style name="MyTheme.Dark.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/TextAppearance.DialogWindowTitle</item>
        <item name="android:buttonStyle">@style/Widget.G4S.Button.Borderless</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorGrey</item>
    </style>

    <!--Colour ot text in AlertDialog-->
    <style name="TextAppearance.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Colour ot button in AlertDialog-->
    <style name="Widget.G4S.Button.Borderless" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ActionBarTabStyle" parent="@android:style/Widget.ActionBar.TabView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorOneMoreGrey</item>
        <item name="android:backgroundSplit">@color/colorOneMoreGrey</item>
        <item name="android:backgroundStacked">@color/colorOneMoreGrey</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoAutoCompleteTextViewStyle" parent="android:Widget.AutoCompleteTextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Loading dialog style -->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorOneMoreGrey</item>
        <item name="android:textColorPrimary">@color/colorGrey</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="AlertDialog.Holo" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorGrey</item>
        <item name="android:textColor">@color/colorOneMoreGrey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
